@model Mini_Ecommerce_Comsuming_APIS.Models.ProductModel

@{
    ViewData["Title"] = "Add New Product";
}
<div class="container-fluid border p-5 bg-light shadow-lg p-3 mb-5 bg-body rounded mt-3">
    <div class="row justify-content-center">
        <i class="bi bi-bag-plus-fill display-4 text-center"></i>
        <h5 class="text-center">Add New Product</h5>
        <hr />
        <div class="col-md-9  text-center">

            <form method="post" enctype="multipart/form-data" asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-label"></label>
                    <input asp-for="ProductDescription" class="form-control" />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" id="fileupload" multiple="multiple" name="files" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <hr />
                <input type="submit" value="Create Product Now" class="btn btn-primary w-50 p-2" />
            </form>
        </div>
        <div class="col-md-3">
            <div class="gallery" style="margin-top:30px"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
